<Window x:Class="Evolution.UI.ClientWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Evolution.UI.ClientWPF.VM"
        Title="Evolution Simulation" Height="800" Width="800">

    <Window.DataContext>
        <vm:MainVM/>
    </Window.DataContext>

    <Grid>
        <Canvas Name="GameCanvas" Background="Black"/>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Top" Background="Gray">
            <Button Content="Запустить" Command="{Binding StartCommand}" Width="100" Margin="5"/>
            <Button Content="Остановить" Command="{Binding StopCommand}" Width="100" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
