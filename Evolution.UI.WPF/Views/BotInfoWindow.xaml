<Window x:Class="Evolution.UI.WPF.Views.BotInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Evolution.UI.WPF.Views"
        mc:Ignorable="d"
        Title="Информация о боте" Height="400" Width="300">
    <Grid>
        <StackPanel>
            <TextBlock Text="Позиция:" FontWeight="Bold"/>
            <TextBlock Name="BotPositionText" Text="-" Margin="0,0,0,10"/>
            
            <Separator Opacity="0" Height="10"/>

            <TextBlock Text="Направление:" FontWeight="Bold"/>
            <TextBlock Name="BotFacingText" Text="-" Margin="0,0,0,10"/>

            <Separator Opacity="0" Height="10"/>

            <TextBlock Text="Текущая команда:" FontWeight="Bold"/>
            <TextBlock Name="BotCurrentCommandText" Text="-" Margin="0,0,0,10"/>

            <Separator Opacity="0" Height="10"/>

            <TextBlock Text="Генетический код:" FontWeight="Bold"/>
            <ListBox Name="BotGenomeList" Height="200"/>
        </StackPanel>
        
    </Grid>
</Window>
