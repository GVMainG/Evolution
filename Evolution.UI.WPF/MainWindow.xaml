<Window x:Class="Evolution.UI.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Evolution" Height="800" Width="800">
    <Grid>
        <Canvas Name="GameCanvas" Width="640" Height="640" Background="White"/>

        <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="10">
            <TextBlock Name="GenerationText" FontSize="16" FontWeight="Bold"/>
            <TextBlock Name="BotCountText" FontSize="16"/>
            <Slider Name="SpeedSlider" Minimum="1" Maximum="100" Value="10" Width="200"/>
            <Button Name="StartButton" Content="Start" Width="100" Click="StartButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
