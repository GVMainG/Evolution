<Window x:Class="Evolution.UI.WPF.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Evolution Simulation" Height="850" Width="850"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid>
            <!-- Список ботов -->
            <ListBox Name="BotList" Width="200" HorizontalAlignment="Left"
                 SelectionChanged="BotList_SelectionChanged"/>

            <!-- Игровое поле -->
            <Canvas Name="GameCanvas" Background="White" Margin="200,0,0,0"/>
        </Grid>

        <!-- Панель управления (внизу) -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Background="LightGray" Height="50">
            <Button Name="StartButton" Content="Старт" Width="80" Click="StartButton_Click"/>
            <Button Name="StopButton" Content="Стоп" Width="80" Click="StopButton_Click"/>
            <TextBlock Text="Скорость:" VerticalAlignment="Center"/>
            <Slider Name="SpeedSlider" Minimum="10" Maximum="1000" Value="100" Width="150" TickFrequency="10" ValueChanged="SpeedSlider_ValueChanged"/>
            <TextBlock Name="GenerationText" Text="Поколение: 0" VerticalAlignment="Center" Margin="20,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
